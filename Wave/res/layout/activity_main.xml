<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EEF0"
    android:gravity="center"
    android:orientation="vertical" >
    
    <LinearLayout android:id="@+id/menu" android:layout_width="match_parent" android:layout_height="fill_parent"
        android:orientation="vertical" android:background="#417ABD">

        <TextView
            android:id="@+id/wave_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="#AAAAAA"
            android:gravity="center"
            android:text="Wave"
            android:textColor="#3C63B0"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:gravity="center_horizontal"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#E4E4E4"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/swim_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Swim"
            android:textColor="#E4E4E4"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/store_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Store"
            android:textColor="#E4E4E4"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Settings"
            android:textColor="#E4E4E4"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <Button
            android:id="@+id/BtnSlide"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="="
            android:textSize="24sp" />

        <Button
            android:id="@+id/start_swimming"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:text="Start Swimming"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="normal"
            android:typeface="sans" />

    </RelativeLayout>
    
</RelativeLayout>